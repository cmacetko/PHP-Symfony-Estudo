{% extends '::base.html.twig' %}

{% block title %}Listagem de Registros{% endblock %}

{% block content -%}
    <h1>Produtos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Titulo2</th>
                <th>Texto</th>
                <th>Datacadastro</th>
                <th>Dataatualizacao</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('produtos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.titulo2 }}</td>
                <td>{{ entity.texto }}</td>
                <td>{% if entity.dataCadastro %}{{ entity.dataCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dataAtualizacao %}{{ entity.dataAtualizacao|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('produtos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('produtos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('produtos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
